<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    >

    <ImageView
        android:id="@+id/type_item_delete"
        android:layout_width="@dimen/list_item_btn_width"
        android:layout_height="match_parent"
        android:background="@drawable/selector_delete"
        android:src="@drawable/ic_delete"
        android:clickable="true"
        android:layout_alignParentRight="true"
        />

    <ImageView
        android:id="@+id/type_item_edit"
        android:layout_width="@dimen/list_item_btn_width"
        android:layout_height="match_parent"
        android:background="@drawable/selector_edit"
        android:src="@drawable/ic_edit"
        android:clickable="true"
        android:layout_toLeftOf="@id/type_item_delete"
        />

    <LinearLayout
        android:id="@+id/type_item_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:clickable="true"
        android:background="@drawable/selector_type_item"
        >

        <TextView
            android:id="@+id/type_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:layout_weight="2"
            android:maxLines="1"
            android:paddingLeft="15dp"
            android:text="Name"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/type_descriptor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:layout_weight="5"
            android:maxLines="2"
            android:paddingLeft="5dp"
            android:text="password"
            android:textSize="15sp" />
    </LinearLayout>

</RelativeLayout>
